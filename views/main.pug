extends layouts/headerFooter

block content
    body
        div.container
            each list, i in result
                div.card
                    div.cardHeader
                        div.goToBoard(style="display: flex;")
                            input(class="boardId" type="text" value=`${list.id}`
                            readonly style="width: 38px;, cursor: pointer;" onclick="getId(event)")
                            span <= click to show
                            
                        span.cardTitle card-title #{list.title}
                        
                    div.card-body
                        h2 #{list.content}
                    div.card-footer
                        h4.footInfo writer : #{list.writer}
                        span
                            button.likeBtn like #{list.likes}

        script(src="/javascripts/main.js")